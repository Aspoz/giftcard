<div class="row">
  <div class="col-xs-12">
    <div class="list-group">
      <% @cards.each do |card| %>
        <a href="/cards/<%= card.id %>" class="list-group-item <%= card.value.nil? ? 'disabled' : ''  %>">
          <span class="row">
            <span class="col-xs-9"><%= card.name %></span>
            <span class="col-xs-3">
              <% if card.value.nil? %>
                Not available
              <% else %>
                &euro; <%= card.value %>
              <% end %>
            </span>
          </span>
        </a>
      <% end %>
    </div>
  </div>
</div>
