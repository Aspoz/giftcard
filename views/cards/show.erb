<div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-12">
      <div class="thumbnail">
        <img src="<%= product[1] %>" alt="">
        <div class="caption">
          <h3><%= product[0] %></h3>
          <p>&euro; <%= product[2] %>, <a href="#" class="btn btn-primary" role="button">Buy now</a></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
