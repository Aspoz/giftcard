<div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-12">
      <div class="thumbnail">
        <img src="<%= product[1] %>" alt="">
        <div class="caption">
          <h3><%= product[0] %></h3>
          <form action="/cards/<%= @card.id %>" method="post">
            <input type="hidden" name="_method" value="patch" />
            <input type="hidden" name="price" value="<%= product[2] %>" />
            <input type="hidden" name="id" value="<%= @card.id %>" />
            <p>&euro; <%= product[2] %>, <button type="submit" class="btn btn-primary" role="button">Buy now</button></p>
          </form>
        </div>
      </div>
    </div>
  <% end %>
</div>
