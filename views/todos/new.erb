<div class="content">
<div class="title">New Todo</div>
<form action="/todos" method="post">
  <label for="todo_title" class="smalltitle">Title:</label><br />
  <input id="todo_title" name="todo[title]" type="text" value="<%= @todo.title %>" />
  <br />
 
  <label for="todo_body" class="smalltitle">Body:</label><br />
  <textarea id="todo_body" name="todo[body]" rows="5"><%= @todo.body %></textarea>
  <br />
 
  <input type="submit" value="Create Todo" />
</form>  
</div>